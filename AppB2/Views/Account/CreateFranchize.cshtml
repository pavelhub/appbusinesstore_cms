@model AppB2.Models.NewFranchize
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.Title = "Create franchize";
}

@if (TempData["Error"] != null) { <text>@TempData["Error"].ToString()</text> }

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
                First Name:
            </td>
            <td>
                @Html.TextBoxFor(x => x.FirstName)
            </td>
        </tr>
        <tr>
            <td>
                Last Name:
            </td>
            <td>
                @Html.TextBoxFor(x => x.LastName)
            </td>
        </tr>
        <tr>
            <td>
                Company Name:
            </td>
            <td>
                @Html.TextBoxFor(x => x.CompanyName)
            </td>
        </tr>
        <tr>
            <td>
                Phone:
            </td>
            <td>
                @Html.TextBoxFor(x => x.Phone, new { type = "tel" })
            </td>
        </tr>
        <tr>
            <td>
                Domain:
            </td>
            <td>
                @Html.TextBoxFor(x => x.DomainName)
            </td>
        </tr>
        <tr>
            <td>
                Country:
            </td>
            <td>
                @Html.TextBoxFor(x => x.Country)
            </td>
        </tr>
        <tr>
            <td>
                Email:
            </td>
            <td>
                @Html.TextBoxFor(x => x.Email, new { type = "email" })
            </td>
        </tr>
        <tr>
            <td>
                Password:
            </td>
            <td>
                @Html.TextBoxFor(x => x.Password, new { type = "password" })
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button>
                    Create</button>
            </td>
        </tr>
    </table>
}
